{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: main_sim.py",
            "type": "debugpy",
            "request": "launch",
            "program": "main_sim.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: benchmark.py",
            "type": "debugpy",
            "request": "launch",
            "program": "benchmark.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Remote Attach to Docker",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false
        }
    ]
}